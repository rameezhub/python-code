


Returning books"""
class Book:
    def __init__(self, title, author):
        self.title = title
        self.author = author
        self.is_borrowed = False

    def __str__(self):
        status = "Borrowed" if self.is_borrowed else "Available"
        return f"{self.title} by {self.author} [{status}]"


class Patron:
    def __init__(self, name):
        self.name = name
        self.borrowed_books = []

    def __str__(self):
        return f"{self.name} - Borrowed: {[book.title for book in self.borrowed_books]}"


class Library:
    def __init__(self):
        self.books = []
        self.patrons = []

    def add_book(self, title, author):
        book = Book(title, author)
        self.books.append(book)
        print(f"Book '{title}' added to the library.")

    def register_patron(self, name):
        patron = Patron(name)
        self.patrons.append(patron)
        print(f"Patron '{name}' registered.")

    def borrow_book(self, patron_name, book_title):
        patron = self._find_patron(patron_name)
        book = self._find_book(book_title)

        if patron and book and not book.is_borrowed:
            book.is_borrowed = True
            patron.borrowed_books.append(book)
            print(f"'{book_title}' borrowed by {patron_name}.")
        elif book and book.is_borrowed:
            print(f"Sorry, '{book_title}' is already borrowed.")
        else:
            print("Book or patron not found.")

    def return_book(self, patron_name, book_title):
        patron = self._find_patron(patron_name)
        if patron:
            for book in patron.borrowed_books:
                if book.title == book_title:
                    book.is_borrowed = False
                    patron.borrowed_books.remove(book)
                    print(f"'{book_title}' returned by {patron_name}.")
                    return
            print(f"{patron_name} did not borrow '{book_title}'.")
        else:
            print("Patron not found.")

    def _find_book(self, title):
        for book in self.books:
            if book.title == title:
                return book
        return None

    def _find_patron(self, name):
        for patron in self.patrons:
            if patron.name == name:
                return patron
        return None

    def display_books(self):
        print("\nBooks in Library:")
        for book in self.books:
            print(book)

    def display_patrons(self):
        print("\nRegistered Patrons:")
        for patron in self.patrons:
            print(patron)




library = Library()
library.add_book("Python Basics", "John Doe")
library.add_book("AI with Python", "Jane Smith")
library.register_patron("Anuja")
library.register_patron("Manasvi")

library.borrow_book("Anuja", "Python Basics")
library.borrow_book("Manasvi", "Python Basics")  # Already borrowed

library.display_books()
library.display_patrons()

library.return_book("Anuja", "Python Basics")
library.borrow_book("Manasvi", "Python Basics")

library.display_books()
library.display_patrons()
